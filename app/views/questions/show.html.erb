<h4 class='center'><%= @question.text %></h4>
<div class='container'>
	<div class='chart-container center'>
		<%= pie :pie_chart, @pie_size, @pie_data%>
	</div>

	<div class='row'>

	    <div class='left'>
		    <strong>Legend</strong>
			  <table class="table-without-boarders">
			 	<%@question.choices.each_with_index do |choice,i| %>
				  	<tr>
				  		<td><i class="material-icons" style="color:<%=Question::COLORS[i].first%>">brightness_1</i></td>
			  			<td><%=choice%></td>
				  	</tr>
			  	<%end%>
			  </table>
		</div>
	</div>
</div>
