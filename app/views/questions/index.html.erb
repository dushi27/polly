<div class="section row">
  <%= link_to '<i class="material-icons">add</i>'.html_safe, new_question_path, class: "btn-floating btn-large waves-effect waves-light right green offset-11"%>
</div>

<div class="container">
    <% @questions.each do |question| %>
      <div class="row">
        <div class="col s12 m6">
          <div class="card blue-grey darken-1">
            <div class="card-content white-text">
              <p><%=question.text%></p>
            </div>
            <div class="card-action center">
              <%= link_to 'Start the Poll', question, class: 'left' %>
              <%= link_to '<i class="material-icons ">edit</i>'.html_safe, edit_question_path(question.id), class: 'right'%>
              <%= link_to '<i class="material-icons ">delete</i>'.html_safe, question_path(question.id), method: :delete, data: { confirm: 'Are you sure?' }, class: 'right'%>
            </div>
          </div>
        </div>
      </div>
    <% end %>
</div>
</div>

